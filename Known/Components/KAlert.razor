<Alert ShowIcon="true" 
       Style="margin-bottom:10px;" 
       Type="@Type.ToString().ToLower()"
       Message="@Text"
/>

@code {
    /// <summary>
    /// 取得或设置提示框类型。
    /// </summary>
    [Parameter] public StyleType Type { get; set; }

    /// <summary>
    /// 取得或设置提示框文本。
    /// </summary>
    [Parameter] public string Text { get; set; }
}