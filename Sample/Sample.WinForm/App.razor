@using AntDesign
@using Known.AntBlazor.Components
@using Known.Blazor
@using Known.Components
@using Microsoft.AspNetCore.Components.Routing

<KContext Value="context">
    <Router AppAssembly="typeof(App).Assembly" AdditionalAssemblies="Config.Assemblies">
        <Found Context="routeData">
            <KRouteData Value="routeData">
                <RouteView RouteData="routeData" DefaultLayout="typeof(AntLayout)" />
            </KRouteData>
        </Found>
        <NotFound>
            <Result Status="404" />
        </NotFound>
    </Router>
    <AntContainer />
    <AntReconnector />
</KContext>

@code {
    private UIContext context;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        context = new UIContext();
    }
}